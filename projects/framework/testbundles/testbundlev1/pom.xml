<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
	<groupId>org.identityconnectors</groupId>
	<artifactId>bundles-test</artifactId>
	<version>1.1.0-SNAPSHOT</version>
  </parent>

  <artifactId>testbundlev1</artifactId>
  <name>Test bundle 1</name>
  <packaging>jar</packaging>

  <properties>
	<!-- We need to predefine because of tests -->
	<ConnectorBundle-Version>1.0.0.0</ConnectorBundle-Version>
  </properties>


  <dependencies>
	<dependency>
		<groupId>${identityconnectors.groupId}</groupId>
		<artifactId>testcommonv1</artifactId>
		<version>${framework.version}</version>
	</dependency>
  </dependencies>

  <!-- Tests are hardcoded to read the bundles from following directory by following final name -->	
  <build>
    <directory>${project.basedir}/dist</directory>
    <finalName>org.identityconnectors.testbundle-1.0.0.0</finalName>

    <plugins>
	    <plugin>
		<artifactId>maven-dependency-plugin</artifactId>
		<executions>
			<execution>
				<id>copy-dependencies</id>
				<phase>process-classes</phase>
				<goals><goal>copy</goal></goals>
				<configuration>
					<artifactItems>
						<artifactItem>
							<groupId>${identityconnectors.groupId}</groupId>
							<artifactId>testcommonv1</artifactId>
						</artifactItem>
					</artifactItems>
					<outputDirectory>${project.build.outputDirectory}/lib</outputDirectory>
				</configuration>
			</execution>
		</executions>
	      </plugin>
    </plugins>	
  </build>



</project>
